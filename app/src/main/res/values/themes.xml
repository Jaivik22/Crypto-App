<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CryptoApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Darker variant of the primary color, used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Accent color, used for floating action buttons and other accents -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background color for the app -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Text color for the app -->
        <item name="android:textColor">@color/colorText</item>

        <!-- Secondary text color for less important information -->
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <!-- Define the color values -->
    <color name="colorPrimary">#2196F3</color>
    <color name="colorPrimaryDark">#1976D2</color>
    <color name="colorAccent">#FF4081</color>
    <color name="colorBackground">#FFFFFF</color>
    <color name="colorText">#212121</color>
    <color name="colorTextSecondary">#757575</color>

    <style name="Theme.CryptoApp" parent="Base.Theme.CryptoApp" />
</resources>